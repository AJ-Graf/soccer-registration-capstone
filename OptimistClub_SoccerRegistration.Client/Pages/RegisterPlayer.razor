@page "/register"

@using System.Globalization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<App> L

<h2>@L["Title"]</h2>

<p class="text-muted">
    @L["Intro"]
</p>

<form>

    <!-- PLAYER INFORMATION -->
    <div class="card mb-4">
        <div class="card-header">@L["PlayerInfo"]</div>
        <div class="card-body">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@L["FirstName"]</label>
                    <input class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">@L["LastName"]</label>
                    <input class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">@L["Gender"]</label>
                    <select class="form-select">
                        <option value="">@L["Select"]</option>
                        <option>@L["Male"]</option>
                        <option>@L["Female"]</option>
                    </select>
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label">@L["Town"]</label>
                    <input class="form-control" />
                </div>

                <div class="col-md-4 mb-3">
                    <label class="form-label">@L["DateOfBirth"]</label>
                    <input type="date" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">@L["ChildShirtSize"]</label>
                <select class="form-select">
                    <option value="">@L["Select"]</option>
                    <option>@L["ChildXS"]</option>
                    <option>@L["ChildS"]</option>
                    <option>@L["ChildM"]</option>
                    <option>@L["ChildL"]</option>
                </select>
            </div>

            <div class="alert alert-warning">
                @L["Important2022"]
            </div>

        </div>
    </div>

    <!-- PARENT / GUARDIAN INFORMATION -->
    <div class="card mb-4">
        <div class="card-header">@L["ParentInfo"]</div>
        <div class="card-body">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@L["FirstName"]</label>
                    <input class="form-control" />
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">@L["LastName"]</label>
                    <input class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">@L["Phone"]</label>
                <input class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">@L["Email"]</label>
                <input type="email" class="form-control" />
            </div>

        </div>
    </div>

    <!-- SIBLING INFORMATION -->
    <div class="card mb-4">
        <div class="card-header">@L["SiblingInfo"]</div>
        <div class="card-body">

            @for (int i = 0; i < siblings.Count; i++)
            {
                <div class="border rounded p-3 mb-3">
                    <h6 class="text-muted">
                        @L["Sibling"] @(i + 1)
                    </h6>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">@L["FirstName"]</label>
                            <input class="form-control" />
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">@L["LastName"]</label>
                            <input class="form-control" />
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">@L["DateOfBirth"]</label>
                            <input type="date" class="form-control" />
                        </div>
                    </div>
                </div>
            }

            <button type="button"
                    class="btn btn-outline-secondary btn-sm"
                    @onclick="AddSibling">
                @L["AddSibling"]
            </button>

        </div>
    </div>

    <!-- VOLUNTEER INFORMATION -->
    <div class="card mb-4">
        <div class="card-header">@L["VolunteerInfo"]</div>
        <div class="card-body">

            <div class="form-check mb-3">
                <input id="volunteerToggle" class="form-check-input"
                       type="checkbox"
                       @bind="isVolunteer" />
                <label class="form-check-label" for="volunteerToggle">
                    @L["VolunteerQuestion"]
                </label>
            </div>

            @if (isVolunteer)
            {
                <div class="mb-3">
                    <label class="form-label">@L["VolunteerRole"]</label>
                    <select class="form-select">
                        <option value="">@L["Select"]</option>
                        <option>@L["Coach"]</option>
                        <option>@L["Referee"]</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">@L["CriminalCheck"]</label>
                    <select class="form-select">
                        <option value="">@L["Select"]</option>
                        <option>@L["Yes"]</option>
                        <option>@L["No"]</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">@L["VolunteerShirtSize"]</label>
                    <select class="form-select">
                        <option value="">@L["Select"]</option>
                        <option>@L["AdultS"]</option>
                        <option>@L["AdultM"]</option>
                        <option>@L["AdultL"]</option>
                        <option>@L["AdultXL"]</option>
                        <option>@L["AdultXXL"]</option>
                    </select>
                </div>
            }

        </div>
    </div>

    <button class="btn btn-primary">
        @L["Submit"]
    </button>

</form>

@code {
    private bool isVolunteer;

    private List<Sibling> siblings = new()
    {
        new Sibling()
    };

    private void AddSibling()
    {
        siblings.Add(new Sibling());
    }

    private class Sibling
    {
        public string? FirstName { get; set; }
        public string? LastName { get; set; }
        public DateTime? DateOfBirth { get; set; }
    }
}
