@implements IDisposable
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<NavMenu> L
@inject NavigationManager NavigationManager

<div class="top-row navbar navbar-dark">
    <div class="container-fluid px-3">
        <a class="navbar-brand d-flex align-items-center gap-2" href="/">
            <img src="images/logo_Optimiste.png"
                 alt="Optimistes Casselman"
                 class="nav-logo" />
            <span class="nav-title">Optimistes Soccer</span>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column nav-menu">

        <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
            <span class="bi bi-house-door-fill-nav-menu"></span>
            @L["Home"]
        </NavLink>

        <NavLink class="nav-link" href="register">
            <span class="bi bi-pencil-square-nav-menu"></span>
            @L["Register"]
        </NavLink>

        <AuthorizeView>
            <Authorized>
                <div class="nav-divider"></div>

                <NavLink class="nav-link" href="/Account/Manage">
                    <span class="bi bi-person-fill-nav-menu"></span>
                    @context.User.Identity?.Name
                </NavLink>

                <form action="/Account/Logout" method="post" class="px-3">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                    <button type="submit" class="nav-link btn-logout">
                        <span class="bi bi-arrow-bar-left-nav-menu"></span>
                        @L["Logout"]
                    </button>
                </form>
            </Authorized>

            <NotAuthorized>
                <div class="nav-divider"></div>

                <NavLink class="nav-link" href="/Account/Login">
                    <span class="bi bi-person-badge-nav-menu"></span>
                    @L["AdminLogin"]
                </NavLink>
            </NotAuthorized>
        </AuthorizeView>

    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
